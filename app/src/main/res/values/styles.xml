<resources>

    <!-- Base application theme. -->

    <style name="BlueButton" parent="ParentGradientButtons">
        <item name="android:background">@drawable/selector_frame_blue</item>
    </style>

    <style name="ParentGradientButtons">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">10dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
    </style>

    <style name="B2OrtaPurple2Bold" parent="ParentGradientButtons">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="CustomMaterialDialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
</resources>
